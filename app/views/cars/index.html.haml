.car-result
  .car-result__box
    .car-result__box__count
      = "検索結果 #{@cars.count}件"
    .car-result__box__cars
      - @cars.each do |car|
        .car-result__box__cars__car-box
          .car-result__box__cars__car-box__image-box
            = image_tag car.images[0].image_car.url
          .car-result__box__cars__car-box__show-box
            %ul
              %li
                ¥
                = car.price
              %li
                = car.name
                |
                = car.maker
            .car-result__box__cars__car-box__show-box__show
              %h1
                = car.prefecture
                = car.city
              %h1
                期間
                = car.period