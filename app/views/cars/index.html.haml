.car-result
  .car-result__box
    .car-result__box__count
      = "検索結果 #{@cars.count}件"
    .car-result__box__cars
      - @cars.each do |car|
        = link_to "/cars/#{car.id}", class: "car-result__box__cars__car-box" do
          .car-result__box__cars__car-box__image-box
            = image_tag car.images[0].image_car.url
          .car-result__box__cars__car-box__show-box
            %ul
              %li
                ¥
                = car.price
              %li
                %h1
                  = car.name
                  |
                  = car.maker
            .car-result__box__cars__car-box__show-box__show
              %h1
                = car.prefecture
                = car.city
              %h1
                期間
                = car.period
            .car-result__box__cars__car-box__show-box__user
              .car-result__box__cars__car-box__show-box__user__image
                = image_tag car.user.image_user.url
              .car-result__box__cars__car-box__show-box__user__star
                %h1= car.user.name
                %p ★★★★★
            .car-result__box__cars__car-box__show-box__reviews
              - car.reviews.first(2).each do |review|
                .car-result__box__cars__car-box__show-box__reviews__review
                  .car-result__box__cars__car-box__show-box__reviews__review__user
                    .car-result__box__cars__car-box__show-box__reviews__review__user__image
                      = image_tag review.user.image_user.url
                    %h2= review.user.name
                  .car-result__box__cars__car-box__show-box__reviews__review__comment
                    = review.comment
              - if car.reviews.count == 0
                %h1 レビューがありません
              - else
                %h1= "他全#{car.reviews.count}件のレビュー"